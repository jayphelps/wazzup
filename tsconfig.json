{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2015"],
    "declaration": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "alwaysStrict": true,
    "pretty": true,
    "types": [
      "node"
    ]
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ],
  "typeRoots": [
    "../node_modules/@types"
  ],
  "types": [
    "core-js",
    "jest",
    "node"
  ]
}
